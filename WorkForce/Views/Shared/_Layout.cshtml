<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkForce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WorkForce</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>                        
                        <li id="RegisterLink" class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @await Html.PartialAsync("Login")

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - WorkForce
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

    <script>

        var usernameInput = document.getElementById("LoginUsernameInput");
        var passwordInput = document.getElementById("LoginPasswordInput");
        var loginResult = document.getElementById("LoginResult");
        var loginButton = document.getElementById("LoginButton");
        

        UpdatePage();
        var loggedIn = false;

        function UpdatePage() {

            var sessionUser = JSON.parse(sessionStorage.getItem('User'));


            if (sessionUser && sessionUser.username && sessionUser.password) {
                console.log("Logged in");
                $("#Login").hide();
                $("#Logout").show();
                $("#RegisterLink").hide();
                loggedIn = true;
                
            }
            else {
                console.log("Logged out");
                loginResult.innerHTML = "Status: &ensp;Waiting for login..."
                $("#Logout").hide();
                $("#Login").show();
                $("#RegisterLink").show();

                loggedIn = false;
            }

            if ($("#Register").length > 0) {
                UpdateRegister();
            }

        }
        function Login() {

            var user = {
                Username: usernameInput.value,
                Password: passwordInput.value
            };
            loginResult.innerHTML = "Status: &ensp;Logging In..."

            $.post("/Home/Login/", user, function (result) {
                // console.log(result);

                loginResult.innerHTML = "Status: &ensp;" + result.message;

                if (result.failed == false) {

                    sessionStorage.setItem('User', JSON.stringify(result.result));

                    UpdatePage();

                }
            });
        }

        function Logout() {
            sessionStorage.removeItem('User');
            UpdatePage();
        }

    </script>
</body>
</html>
